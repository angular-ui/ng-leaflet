{
  "compileOnSave": true,
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "ES5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowUnusedLabels": false,
    "noImplicitReturns": true,
    "sourceMap": true,
    "declaration": true,
    "typeRoots": [
      "../node_modules/@types"
    ],
    "skipLibCheck": true
  },
  "exclude": [
    "../node_modules",
    "../dist",
    "../src",
    "**/*.spec.ts"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true
  }
}
